<html>
<head lang="ja">
<meta charset="utf-8">
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<title>portal</title>
<style>
	.wrapper {
		margin-top:				10px;
		margin-left:			10px;
		width:					100%;
		height:					500px;
	}

	#space1 {
		height:					150px;
		width:					350px;
		margin-top:				20px;
		margin-left:			20px;
		border:					1px #666 outset;
	}
	
	#space2 {
		width:					350px;
		margin-left:			20px;
		text-align:				right;
	}
	
	.test {
		padding-top: 			10px;
		padding-left:			10px;
	}

</style>

<script>
function reset() {
	$('#name').val();
	$('#tel').val();
	$('#mailaddress').val();
}
</script>
</head>
<body>
<div class="wrapper">
	<div id="space1">
		<form action="/confirm" method="post" class="board-form">
			<table class="test">
				<tr>
					<td><label>name:</label></td>
					<td><input type="text" id="name" name="name" class="input"></td>
				</tr>
				
				<tr>
					<td><label>tel:</label></td>
					<td><input type="text" id="tel" name="tel" class="input"></td>
				</tr>
				
				<tr>
					<td><label>mailaddress:</label></td>
					<td><input type="text" id="mailaddress" name="mailaddress"><br></td>
				</tr>
				<tr><td>&nbsp</td></tr>
				<tr>
					<td></td>
					<td><button type="submit" class="submit">登録</button>
						<button type="button" class="submit" onclick="reset();">リセット</button>
					</td>
				</tr>
			</table>
		</form>
	</div>
	<div id="space2" style="width: 350px; margin-left: 20px; text-align: right;">
		<a href="http://localhost:3000/">トップへ戻る</a>
	</div>
</div>
</body>

</html>