<html>
<head lang="ja">
<meta charset="utf-8">
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<title>portal</title>
<style>
	.wrapper {
		margin-top:				10px;
		margin-left:			10px;
		width:					100%;
		height:					500px;
	}

	#space1 {
		height:					150px;
		width:					350px;
		margin-top:				20px;
		margin-left:			20px;
		border:					1px #666 outset;
	}
	
	#space2 {
		height:					100%;
		width:					100%;
		margin-top:				20px;
		margin-left:			20px;
	}
	
	.test {
		padding-top: 			10px;
		padding-left:			10px;
	}
	
	.link {
		padding-top:			20px;
		padding-left:			20px;
	}

</style>

<script>
function reset() {
	$('#name').val();
	$('#tel').val();
	$('#mailaddress').val();
}

function test(number) {
	var id = $(number).val();
	var url = 'http://localhost:3000/delete/confirm?';
	url = url + 'id=' + id;
	window.location.href = url;
}
</script>
</head>
<body>
<div class="wrapper">
	<div id="space1">
		<div class="link">
			<a href="http://localhost:3000/regist">ユーザ登録</a>
			<a href="http://localhost:3000/">トップへ戻る</a>
		</div>
	</div>

	<div id="space2">
		<table border=1>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>tel</th>
				<th>mailaddress</th>
				<th>削除</th>
			</tr>
			<% items.forEach(function(item) {%>
				<tr>
					<td><%= item.id%></td>
					<td><%= item.name%></td>
					<td><%= item.tel%></td>
					<td><%= item.mailaddress%></td>
					<td><button type="submit" name="delete" id="<%= item.id%>" value="<%= item.id%>" onclick="test(this);">削除</button></td>
				</tr>
			<% }) %>
		</table>
	</div>
</div>
</body>
</html>