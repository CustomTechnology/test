<html>
<head lang="ja">
<meta charset="utf-8">
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<title>portal</title>
<style>
	.wrapper {
		margin-top:				10px;
		margin-left:			10px;
		width:					100%;
		height:					500px;
	}

	#space1 {
		height:					220px;
		width:					400px;
		margin-top:				20px;
		margin-left:			20px;
		border:					1px #666 outset;
	}
	
	#space2 {
		height:					100%;
		width:					100%;
		margin-top:				20px;
		margin-left:			20px;
	}
	
	.link {
		padding-top:			30px;
		padding-left:			30px;
	}

</style>

<script>
function reset() {
	$('#name').val();
	$('#tel').val();
	$('#mailaddress').val();
}

function test(number) {
	var id = $(number).val();
	var url = '/delete/confirm?';
	url = url + 'id=' + id;
	window.location.href = url;
}

function update(number) {
	var id = $(number).val();
	var url = '/update?';
	url = url + 'id=' + id;
	window.location.href = url;
}
</script>
</head>
<body>
<div class="wrapper">
	<div id="space1">
		<div class="link">
			<a href="/regist">ユーザ登録</a>
			<a href="/">トップへ戻る</a>
		</div>
	</div>

	<div id="space2">
		<table border=1>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>tel</th>
				<th>mailaddress</th>
				<th>更新</th>
				<th>削除</th>
			</tr>
			<% items.forEach(function(item) {%>
				<tr>
					<td><%= item.id%></td>
					<td><%= item.name%></td>
					<td><%= item.tel%></td>
					<td><%= item.mailaddress%></td>
					<td><button type="submit" class="btn btn-primary" name="update" id="<%= item.id%>" value="<%= item.id%>" onclick="update(this);">更新</button></td>
					<td><button type="submit" class="btn btn-danger" name="delete" id="<%= item.id%>" value="<%= item.id%>" onclick="test(this);">削除</button></td>
				</tr>
			<% }) %>
		</table>
	</div>
</div>
</body>
</html>